@model eSPP.Models.SuratPengesahanHospitalModel

@{
    ViewBag.Title = "SuratPengesahanHospital";
}




<div id="content">

    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa-fw fa fa-pencil-square-o"></i>
                Forms
                <span>
                    >
                    Surat Pengesahan Hospital/Klinik
                </span>
            </h1>
        </div>
    </div>

    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <!-- WIDGET END -->

        </div>

        <!-- end row -->
        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-sm-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-align-justify"></i> </span>
                        <h2> Surat Pengesahan Hospital/Klinik</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div></div>
                            <div class="row">

                                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 offset-lg-1">
                                    <div class="well">

                                        <div class="row">
                                            <div class="col-lg-3 col-sm-3 col-xs-12">
                                                <div class="input">
                                                    @Html.EditorFor(m => Model.NoPekerja, new { htmlAttributes = new { @class = "form-control", placeholder = "No.Pekerja" } })
                                                </div>
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                                <div class="input">
                                                    @Html.EditorFor(m => Model.NamaPekerja, new { htmlAttributes = new { @class = "form-control", placeholder = "Nama" } })
                                                </div>
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                                <div class="input">
                                                    @Html.EditorFor(m => Model.NoKPBaru, new { htmlAttributes = new { @class = "form-control", placeholder = "No. KP (Baru)" } })
                                                </div>
                                            </div>

                                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                                <div class="button">
                                                    <a class="btn btn-default btn-primary" href='@Url.Action("Search","laporan",new { jenis = 1, value = Model.NoPekerja})'> 
                                                        <i class="fa fa-search" style="padding-right:5px;"></i>Cari
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>

                            <br />


                            @using (Html.BeginForm("SuratPengesahanHospital", "Laporan", FormMethod.Post, new { @class = "smart-form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => Model.NoPekerja)
                                @Html.HiddenFor(m => Model.NamaPekerja)
                                @Html.HiddenFor(m => Model.NoKPBaru)
                                <div>
                                    <fieldset>
                                        <div class="row">
                                            <section class="col col-lg-2 col-md-2 col-sm-12">
                                                <label class="label">
                                                    Jawatan
                                                </label>
                                            </section>
                                            <section class="col col-lg-4 col-md-4 col-sm-12">
                                                <label class="input">
                                                    @Html.EditorFor(m => Model.Jawatan, new { htmlAttributes = new { @class = "form-control" } })
                                                </label>
                                            </section>
                                            <section class="col col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                                <label class="label col-lg-4 col-md-4 col-sm-12 col-xs-12">Rawatan Tanggungan</label>
                                                <div class="inline-group col-lg-8 col-md-8 col-sm-12 col-xs-12">
                                                    <label class="radio">
                                                        @Html.RadioButton("IsRawatanSendiri", true, htmlAttributes: new { @class = "form-control", disabled = "disabled " })
                                                        <i></i>Sendiri
                                                    </label>
                                                    <label class="radio">
                                                        @Html.RadioButton("IsRawatanSendiri", false, htmlAttributes: new { @class = "form-control", disabled = "disabled " })
                                                        <i></i>Tanggungan
                                                    </label>
                                                </div>
                                            </section>
                                        </div>
                                        <div class="row">
                                            <section class="col col-lg-2 col-md-2 col-sm-12">
                                                <label class="label">
                                                    Gred Gaji
                                                </label>
                                            </section>
                                            <section class="col col-lg-4 col-md-4 col-sm-12">
                                                <label class="input">
                                                    @Html.TextBoxFor(m => Model.GredGaji, new { htmlAttributes = new { @class = "form-control" } })
                                                </label>
                                            </section>
                                            <section class="col col-lg-2 col-md-2 col-sm-12">
                                                <label class="label">
                                                    Tarikh
                                                </label>
                                            </section>
                                            <section class="col col-lg-4 col-md-4 col-sm-12">
                                                <label class="input">
                                                    @Html.TextBoxFor(m => m.TarikhString, new { htmlAttributes = new { @class = "form-control", data_mask = "99/99/9999", data_mask_placeholder = "-" } })
                                                    @Html.ValidationMessage("a", "", new { @class = "text-danger" })
                                                </label>
                                            </section>
                                        </div>
                                        <div class="row">
                                            <section class="col col-lg-2 col-md-2 col-sm-12">
                                                <label class="label">
                                                    Gaji Bulanan (RM)
                                                </label>
                                            </section>
                                            <section class="col col-lg-4 col-md-4 col-sm-12">
                                                <label class="input">
                                                    @Html.TextBoxFor(m => m.GajiBulanan, new { htmlAttributes = new { @class = "form-control" } })
                                                </label>
                                            </section>

                                            <section class="col col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                                <label class="label col-lg-4 col-md-4 col-sm-12 col-xs-12">Surat Pengesahan bagi</label>
                                                <div class="inline-group col-lg-8 col-md-8 col-sm-12 col-xs-12">
                                                    <label class="radio">
                                                        @Html.RadioButton("IsHospital", true, htmlAttributes: new { @class = "form-control", disabled = "disabled " })
                                                        <i></i>Hospital
                                                    </label>
                                                    <label class="radio">
                                                        @Html.RadioButton("IsHospital", false, htmlAttributes: new { @class = "form-control", disabled = "disabled " })
                                                        <i></i>Klinik
                                                    </label>
                                                </div>
                                            </section>
                                            <section class="col col-lg-2 col-md-2 col-sm-12">
                                                <label class="label">
                                                    Hospital/Klinik
                                                </label>
                                            </section>
                                            <section class="col col-lg-4 col-md-4 col-sm-12">
                                                <label class="input">
                                                    @Html.TextBoxFor(m => m.HospitalName, new { htmlAttributes = new { @class = "form-control" } })
                                                </label>
                                            </section>
                                        </div>
                                        <header>
                                            Pengesahan Majikan
                                        </header>
                                        <br />
                                        <div class="row">
                                            <section class="col col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                                <label class="label col-lg-4 col-md-4 col-sm-12 col-xs-12"></label>
                                                <div class="inline-group col-lg-8 col-md-8 col-sm-12 col-xs-12">
                                                    <label class="radio">
                                                        @Html.RadioButton("IsPengesahanMajikan", true, htmlAttributes: new { @class = "form-control", disabled = "disabled " })
                                                        <i></i>Disahkan
                                                    </label>
                                                    <label class="radio">
                                                        @Html.RadioButton("IsPengesahanMajikan", false, htmlAttributes: new { @class = "form-control", disabled = "disabled " })
                                                        <i></i>Tidak Disahkan
                                                    </label>
                                                </div>
                                            </section>
                                        </div>
                                    </fieldset>

                                    <header>
                                        Maklumat Tanggungan
                                    </header>
                                    <fieldset>
                                        <div class="">
                                            <table id="datatable_tabletools" class="table table-bordered table-hover" width="100">
                                                <thead>
                                                    <tr>
                                                        <th colspan="3" data-hide="phone">Senarai Tanggungan</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>Nama</td>
                                                        <td>Hubungan</td>
                                                        <td>No KP</td>
                                                    </tr>
                                                    @for (int i = 0; i < Model.MaklumatTanggungan.Count(); i++)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(m => Model.MaklumatTanggungan[i].Nama)
                                                                @Html.HiddenFor(m => Model.MaklumatTanggungan[i].Nama)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(m => Model.MaklumatTanggungan[i].Hubungan)
                                                                @Html.HiddenFor(m => Model.MaklumatTanggungan[i].Hubungan)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(m => Model.MaklumatTanggungan[i].NoKP)
                                                                @Html.HiddenFor(m => Model.MaklumatTanggungan[i].NoKP)
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </fieldset>
                                    <fieldset>

                                        <div class="">
                                            <table id="datatable_tabletools" class="table table-striped table-bordered table-hover">
                                                <thead>
                                                    <tr>
                                                        <th data-hide="phone">Senarai Surat Pengesahan Yang Pernah Dikeluarkan</th>



                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td></td>



                                                    </tr>
                                                    <tr>
                                                        <td></td>



                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </fieldset>

                                    <fieldset>
                                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                            <div class="button">
                                                <button class="btn btn-default btn-success" type="submit">
                                                    <i class="fa fa-print"></i> Cetak
                                                </button>
                                            </div>
                                        </div>
                                    </fieldset>

                                </div>
                            }
                        </div>
                    </div>
                </div>
            </article>

        </div>
    </section>
</div>

