@using eSPP.Models;
@model  IEnumerable<eSPP.Models.CariPekerjaModel>
@{
    ViewBag.Title = "SuratPengesahanHospital";
}

<div id="content">

    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa-fw fa fa-pencil-square-o"></i>
                Forms
                <span>
                    >
                    Surat Pengesahan Hospital/Klinik
                </span>
            </h1>
        </div>
    </div>

    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <!-- WIDGET END -->

        </div>

        <!-- end row -->
        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-sm-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-align-justify"></i> </span>
                        <h2> Surat Pengesahan Hospital/Klinik</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">

                            <div class="row">

                                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 offset-lg-1">
                                    <div class="well">
                                        @using (Html.BeginForm())
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="row">
                                                <div class="col-lg-3 col-sm-3 col-xs-12">
                                                    <div class="select">
                                                        <select name="jenis" id="jenis" class="form-control">
                                                            <option selected disabled="disabled">Jenis</option>
                                                            <option value="1">No. Pekerja</option>
                                                            <option value="2">Nama Pekerja</option>
                                                            <option value="3">No. KP(Baru)</option>
                                                        </select>
                                                        <i></i>
                                                    </div>
                                                </div>
                                                <div class="col-lg-3 col-sm-3 col-xs-12">
                                                    <div class="input">
                                                        <input type="text" name="value" id="value" class="form-control"
                                                               placeholder="Data" />
                                                    </div>
                                                </div>

                                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                                    <div class="button">
                                                        <button class="btn btn-default btn-primary" type="submit">
                                                            <i class="fa fa-search"></i> Cari
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    </div>
                                </div>

                            </div>

                            <br />
                            <div>
                                &nbsp;
                            </div>
                            <div>
                                @foreach (var s in Model)
                                {
                                    <div class="well">
                                        <fieldset>
                                            <div class="row" id="infoKakitangan">
                                                <div class="col col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                                    <div class="row">
                                                        <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                            @if (s.Gambar == null)
                                                            {

                                                                if (s.Jantina == "P")
                                                                {
                                                                    <img id="img" src="~/content/img/avatars/female.png" alt="" width="120" height="120" />
                                                                }
                                                                else
                                                                {
                                                                    <img id="img" src="~/content/img/avatars/male.png" alt="" width="120" height="120" />
                                                                }
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col col-lg-8 col-md-8 col-sm-10 col-xs-12 smart-form">
                                                    <div class="row">
                                                        <section class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                            <label class="label col-lg-2 col-md-2 col-sm-2">Nama</label>
                                                            <div class="col-lg-6 col-md-8 col-sm-8">
                                                                <label class="input">
                                                                    <i class="icon-append fa fa-user"></i>
                                                                    @Html.EditorFor(model => s.Nama,
                                                                   new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                                                </label>
                                                            </div>
                                                        </section>
                                                    </div>
                                                    <div class="row">
                                                        <section class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                            <label class="label col-lg-2 col-md-2 col-sm-2">No Pekerja</label>
                                                            <div class="col-lg-6 col-md-8 col-sm-8">
                                                                <label class="input">
                                                                    <i class="icon-append fa fa-user"></i>
                                                                    @Html.EditorFor(model => s.NoPekerja,
                                                                   new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                                                </label>
                                                            </div>
                                                        </section>
                                                    </div>
                                                    <div class="row">
                                                        <section class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                            <label class="label col-lg-2 col-md-2 col-sm-2">No KP Baru</label>
                                                            <div class="col-lg-6 col-md-8 col-sm-8">
                                                                <label class="input">
                                                                    <i class="icon-append fa fa-user"></i>
                                                                    @Html.EditorFor(model => s.NoKPBaru,
                                                                   new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                                                </label>
                                                            </div>
                                                        </section>
                                                    </div>
                                                </div>
                                                <div class="col col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                                    <section>
                                                        <a class="btn btn-default btn-primary"
                                                           href="@Url.Action("SuratPengesahanHospital", "Laporan",
                                                                new { noPekerja = s.NoPekerja })" title="Surat Pengesahan Hospital">
                                                            Lihat Info
                                                        </a>
                                                    </section>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </article>

        </div>
    </section>
</div>
