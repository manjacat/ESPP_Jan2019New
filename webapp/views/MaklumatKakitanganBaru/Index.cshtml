                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <footer>
                                            <div class="well text-right">
                                                <button type="button" name="cetak" id="btn-cetak" class="btn btn-success hide">
                                                    <i class="fa fa-print"></i>
                                                </button>
                                                <button type="submit" name="Command" id="btn-edit" class="btn btn-primary" disabled="disabled">
                                                    <i class="fa fa-edit"> Kemaskini</i>
                                                </button>
                                            </div>
                                        </footer>
                                    }

                                }
                            
                                @using (Html.BeginForm("CetakPDF", "MaklumatKakitangan", FormMethod.Post, new { id = "CetakForm", enctype = "multipart/form-data", target = "_blank" }))
                                {
                                    @Html.HiddenFor(model => model.ACTIVE_ITEM)
                                    @Html.HiddenFor(model => model.HR_MAKLUMAT_PERIBADI.HR_NO_PEKERJA)
                                }

                        <!-- end widget content -->

                    </div>
                    @Html.Partial("ModalPekerja")
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
                </div>
            </article>
            <!-- WIDGET END -->

        </div>



        <!-- end row -->
        <!-- end row -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
@section pagespecific {
    <script type="text/javascript">

        // DO NOT REMOVE : GLOBAL FUNCTIONS!

        $(document).ready(function () {

            //ActiveTab
            // store the currently selected tab in the hash value
            //$("ul.nav-tabs > li > a").on("shown.bs.tab", function(e) {
            //  var id = $(e.target).attr("href").substr(1);
            //  window.location.hash = id;
            //});

            // on load of the page: switch to the currently selected tab
            let url = location.href.replace(/\/$/, "");
            if (location.hash) {
                const hash = window.location.hash;
                var item = hash.substring(1, hash.length)
                $('input[id="ACTIVE_ITEM"]').val(item)
                $('#myTab a[href="' + hash + '"]').tab('show');
                url = location.href.replace(/\/#/, "#");
                history.replaceState(null, null, url);
                setTimeout(() => {
                    $(window).scrollTop(0);
                }, 400);
                
            }

            $('a[data-toggle="tab"]').on("click", function () {
                let newUrl;
                const hash = $(this).attr("href");
                if (hash == "#Peribadi") {
                    newUrl = url.split("#")[0];
                } else {
                    newUrl = url.split("#")[0] + hash;
                }
                //newUrl += "/";
                if (hash == "#Peribadi" || hash == "#Pekerjaan") {
                    $("#btn-cetak").removeClass("hide");
                }
                else {
                    $("#btn-cetak").addClass("hide");
                }
                history.replaceState(null, null, newUrl);
            });


            $("#myTab #ActiveTab").on("click", function () {
                var fid = $(this).attr("href")
                item = fid.substring(1, fid.length)
                $('input[id="ACTIVE_ITEM"]').val(item)
            })

            
        });
</script>
}