<div class="modal fade" id="ModalAnugerahCemerlang" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">
                    Tambah Anugerah Cemerlang <span class="error"></span>
                </h4>
            </div>
            <div class="modal-body no-padding smart-form">

                @Html.Hidden("HR_ANUGERAH_CEMERLANG_HR_NO_PEKERJA", null, new { @class = "form-control" })

                <fieldset>
                    <section>
                        <div class="row">
                            <label class="label col col-4">Nama Anugerah</label>
                            <div class="col col-8">
                                <label class="input">
                                    @Html.TextBox("HR_ANUGERAH_CEMERLANG_HR_NAMA_ANUGERAH", null, new { @class = "form-control" })
                                </label>
                            </div>
                        </div>
                    </section>
                    <section>
                        <div class="row">
                            <label class="label col col-4">Tarikh Penerimaan</label>
                            <div class="col col-8">
                                <label class="input">
                                    <i class="icon-append fa fa-calendar"></i>
                                    @Html.TextBox("HR_ANUGERAH_CEMERLANG_HR_TARIKH_PENERIMAAN", null, new { @class = "form-control" })
                                </label>
                            </div>
                        </div>
                    </section>
                </fieldset>
                <footer>
                    <button type="button" id="btn-AnugerahCemerlang" class="btn btn-primary">
                        <span class="fa fa-plus"></span> Tambah
                    </button>
                    <button type="reset" class="btn btn-default">
                        Reset
                    </button>
                    <button type="button" id="btn-back" class="btn btn-default" data-dismiss="modal">
                        Kembali
                    </button>
                </footer>
            </div>
        </div>
    </div>
</div>


