
@model eSPP.Models.HR_PERBATUAN_PUTIH


<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
        </div>
    </div>
   
    <section id="widget-grid" class="">

        <div class="row">

            <article class="col-sm-12">

                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-align-justify"></i> </span>
                        <h2>BAHAGIAN SUMBER MANUSIA</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                           @using (Html.BeginForm("EditPerbatuan","PengesahanPerbatuan", FormMethod.Post, new { id = "order-form", @class = "smart-form", novalidate = "novalidate" }))
                           {
                                @Html.AntiForgeryToken()
                                @Html.ValidationBootstrap()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.HR_KOD_PERBATUAN);
                                @Html.HiddenFor(model => model.HR_NO_PEKERJA);


                              

                                <footer>
                                    <div class="well text-right">
                                        <button type="button" class="btn btn-default" onclick="javascript: history.go(0)"><i class="" href="@Url.Action("CariPemohon","CariPemohon")"></i>Kembali</button>
                                        <button type="button" class="btn btn-default" onclick="javascript: history.go(0)"><i class=""></i>Batal</button>
                                        <button type="submit" class="btn btn-success" id="Hantar" name="Command" value="Hantar"><i class=""></i>Hantar</button>

                                    </div>
                                </footer>
                            }

                        </div>

                    </div>



                </div>
            </article>

        </div>
    </section>
</div>


    <script type="text/javascript">

    $(document).ready(function () {

        var $orderForm = $("#mKakitangan").validate({
            // Rules for form validation
            rules: {
                HR_KOD_LAWATAN: {
                    required: true,

                }

            },

            // Messages for form validation
            messages: {
                HR_KOD_LAWATAN: {
                    required: 'Nama Seminar diperlukan'
                }

            },

            // Do not change code below
            errorPlacement: function (error, element) {
                error.insertAfter(element.parent());
            }
        });



      
     
        $("#mohon input[name='HR_MOHON_IND']").on("click", function () {
            if ($(this).val() == "T") {
                $("#HR_KELAS2").attr("disabled", "disabled");
                $("#HR_KM2 ").attr("disabled", "disabled");
                $("#HR_KELAS1").removeAttr("disabled");
                $("#HR_KM1").removeAttr("disabled");
                $("#HR_KELAS1").val("");
                $("#HR_KM1").val("");

            }
            else {
                $("#HR_KELAS1").attr("disabled", "disabled");
                $("#HR_KM1 ").attr("disabled", "disabled");
                $("#HR_KELAS2").removeAttr("disabled");
                $("#HR_KM2").removeAttr("disabled");
                $("#HR_KELAS2").val("");
                $("#HR_KM2").val("");
            }
        })


      

    })
    </script>
